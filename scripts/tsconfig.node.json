{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "outDir": "../dist",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "../src/*.ts",
        "../src/api/**/*.ts",
        "../src/data/**/*.ts",
        "../typings/**/*.ts"
    ]
}