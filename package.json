{
  "name": "the-concierge",
  "version": "2.6.11",
  "description": "Concierge Service",
  "main": "build/index.js",
  "keywords": [
    "docker",
    "orchestration",
    "continuous",
    "deployment",
    "typescript"
  ],
  "preferGlobal": true,
  "dependencies": {
    "@types/dockerode": "^2.4.1",
    "@types/highcharts": "^5.0.5",
    "analysis": "0.x.x",
    "body-parser": "^1.16.1",
    "chalk": "^1.0.0",
    "compression": "^1.6.2",
    "dockerode": "^2.4.3",
    "express": "^4.14.1",
    "highcharts": "^5.0.14",
    "http-proxy": "^1.13.3",
    "knex": "^0.11.7",
    "minimist": "^1.2.0",
    "pm2": "^2.6.1",
    "socket.io": "^1.5.0",
    "sqlite3": "^3.1.4",
    "ssh2": "^0.4.9",
    "tar-fs": "^1.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/history": "^2.0.39",
    "@types/knex": "^0.0.53",
    "@types/knockout": "^3.4.39",
    "@types/minimist": "^1.2.0",
    "@types/node": "^6.0.38",
    "brfs": "^1.4.3",
    "browserify": "^14.1.0",
    "browserify-fs": "^1.0.0",
    "chai": "^3.4.1",
    "del": "^3.0.0",
    "knockout": "^3.4.1",
    "mocha": "^2.2.5",
    "multiple-dispatch": "^0.3.0",
    "prettier": "^1.7.4",
    "promise-polyfill": "^6.0.2",
    "rimraf": "^2.6.1",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.3.4",
    "whatwg-fetch": "^2.0.3"
  },
  "scripts": {
    "debug": "node --inspect start.js",
    "// Service control": "",
    "start": "pm2 start env.json",
    "stop": "pm2 stop the-concierge",
    "restart": "pm2 restart the-concierge",
    "logs": "pm2 logs the-concierge",
    "status": "pm2 status the-concierge",
    "// Build scripts": "",
    "clean": "rimraf build/ && node scripts/clean.js",
    "build": "tsc -p scripts/tsconfig.node.json && tsc -p scripts/tsconfig.front.json",
    "postbuild": "browserify -e front/index.js -o front/bundle.js -r fs:browserify-fs -t brfs",
    "build:front": "tsc -p scripts/tsconfig.front.json && yarn bundle",
    "build:back": "tsc -p scripts/tsconfig.node.json",
    "bundle": "browserify -e front/index.js -o front/bundle.js -r fs:browserify-fs -t brfs",
    "lint": "prettier --single-quote=true --no-bracket-spacing=true --tab-width=2 --trailing-comma=none --use-tabs=false --print-width=100 --no-semi --write \"./src/**/*.ts\" \"./front/**/*.ts\"",
    "test": "yarn build",
    "// Registry helpers": "",
    "create-cert": "openssl req -newkey rsa:2048 -nodes -keyout certificates/registry.key -x509 -days 999 -out certificates/registry.crt -subj \"/CN=docker.local.dev\"",
    "create-certicate": "openssl req -new -x509 -text -key certificates/registry.key -out ca.crt -subj \"/CN=docker.local.dev\"",
    "create-registry": "npm run create-cert && npm run create-certicate && docker-compose -f docker-compose.yaml up -d"
  },
  "author": "Carl Winkler",
  "license": "MIT",
  "contributors": [],
  "bin": {
    "the-concierge": "./build/cli.js"
  }
}
